  <script>

const messageElement = document.getElementById("yiyan");

const messages = [

  "生命不止，继续跑下去。",

  "每天都要向前一步。",

  "人生没有彩排，只有现场直播。",

  "开心是一天,不开心也是一天,不如开心每一天。",

  "前方路途坎坷，但依旧前行。",

  "别让梦想只停留在梦里。",

  "昨天已经过去，明天尚未到来，今天就是一个好日子。",

];

function randomMessage() {

  const index = Math.floor(Math.random() * messages.length);

  messageElement.textContent = messages[index];

}

randomMessage(); 

document.getElementById("loginBtn").addEventListener("click", function(event) {

  event.preventDefault(); 

  

  const username = document.getElementById("username").value;

  const password = document.getElementById("password").value;

  

  if (username === "Admin.lvka" && password === "123456") {

    alert("登录成功。");

    window.location.href = 'https://chinalvka.github.io/Chinalvka.gitub.io/'

  } else {

    alert("非法入侵警告！你的所有设备信息已被记录并上传至管理终端，请立即退出。");

    window.location.href = 'https://chinalvka.github.io/Chinalvka.gitub.io/'

  }

});

const slidean = document.getElementById("slide-an");

const slidekp = document.getElementById("slide-kp");

slidean.addEventListener("click", function() {

  slidekp.classList.add("active");

});

window.addEventListener("popstate", function(event) {

  if (slidekp.classList.contains("active")) {

    slidekp.classList.remove("active");

    history.pushState(null, null, location.href);

  }

});

history.pushState(null, null, location.href);

  </script>

